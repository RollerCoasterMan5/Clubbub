	var bigOne = document.getElementById('bigOne');
	var dbRef = firebase.database().ref().child('dummy');
	dbRef.on('value', function seth1(snap) {
		console.log("in on function");
		snap.forEach(function (value) {
		console.log(value.val());
			bigOne.innerHtml = bigOne.innerHtml + value.val().name + '<br>';
		});
	});
	
	function dummyInput(){
		var hithere = document.getElementById("chris").value;
		console.log(hithere);
